<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#6495ed"
    tools:context="gra.gra5.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_margin="100dp"
        android:id="@+id/linearLayout">


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyświetl zagadkę"
        android:id="@+id/buttonGraj"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/buttonMap"
        android:layout_alignLeft="@+id/buttonMap"
        android:layout_alignStart="@+id/buttonMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prowadź do zagadki"
        android:id="@+id/buttonZagadka"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/buttonMap"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mapa zagadek"
        android:id="@+id/buttonMap"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:layout_above="@+id/buttonKonto"
        android:layout_alignRight="@+id/buttonZagadka"
        android:layout_alignEnd="@+id/buttonZagadka"
        android:layout_alignLeft="@+id/buttonZagadka"
        android:layout_alignStart="@+id/buttonZagadka" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konto"
        android:id="@+id/buttonKonto"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
